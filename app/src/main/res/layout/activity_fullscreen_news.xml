<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"


    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f_tv_head"
        android:letterSpacing="0.05"
        android:text="India will win the world cup this year!!"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#000"
        />


        <ImageView
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:id="@+id/f_img"
            android:layout_gravity="center"
            android:src="@drawable/logooo"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_whatsapp"
        android:layout_marginHorizontal="2dp"
        android:src="@drawable/whatsapppp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/gmail"
        android:id="@+id/btn_gmail"
        android:layout_marginHorizontal="2dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_share"
        android:src="@drawable/ic_share_black_24dp"
        android:layout_marginHorizontal="2dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_facebook"
        android:src="@drawable/facebook"
        android:layout_marginHorizontal="2dp"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:text="Time:-" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/f_tv_time"
            android:layout_marginLeft="5dp"
            android:text="12:20PM" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="160dp"
            android:text="Date:-" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/f_tv_date"
            android:layout_marginLeft="1dp"
            android:text="12-2-2020" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff0"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="3dp"
                android:id="@+id/f_tv_desc"
                android:layout_height="wrap_content"
                android:text="NADA declared that Indian team can be tested whenever and wherever it wants.
Regards:Sports Secratary.NADA declared that Indian team can be tested whenever and wherever it wants.
Regards:Sports Secratary.NADA declared that Indian team can be tested whenever and wherever it wants.
Regards:Sports Secratary.NADA declared that Indian team can be tested whenever and wherever it wants.
Regards:Sports Secratary.NADA declared that Indian team can be tested whenever and wherever it wants.
Regards:Sports Secratary.NADA declared that Indian team can be tested whenever and wherever it wants.
Regards:Sports Secratary.NADA declared that Indian team can be tested whenever and wherever it wants.
Regards:Sports Secratary"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>